{
  "name": "@jl-org/nexus-agent",
  "version": "1.0.0",
  "description": "一个解析 LLM XML 输出并执行工具调用的 Agent",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "type": "module",
  "types": "dist/index.d.ts",
  "bin": {
    "jl-agent": "dist/agent/cli.cjs",
    "nexus-agent": "dist/server/index.cjs"
  },
  "files": ["dist"],
  "exports": {
    "require": {
      "types": "./dist/index.d.cts",
      "default": "./dist/index.cjs"
    },
    "import": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx src/server/index.ts",
    "lint": "eslint src --fix",
    "test": "pnpm build && node --test",
    "test:watch": "pnpm build && node --test --watch",
    "test:coverage": "pnpm build && node --test --experimental-test-coverage"
  },
  "keywords": [
    "llm",
    "agent"
  ],
  "author": "CJL <2662442385@qq.com>",
  "license": "MIT",
  "dependencies": {
    "@hono/node-server": "1.19.0",
    "hono": "4.9.2",
    "kleur": "4.1.5",
    "@jl-org/log": "1.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://github.com/beixiyo/nexus-agent"
}